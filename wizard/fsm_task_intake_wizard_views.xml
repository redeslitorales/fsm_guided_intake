<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fsm_task_intake_wizard_form" model="ir.ui.view">
        <field name="name">fsm.task.intake.wizard.form</field>
        <field name="model">fsm.task.intake.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Field Service Task - Select Activity" create="false">
                <sheet>
                    <group>
                        <field name="state" invisible="1"/>
                        <field name="require_products" invisible="1"/>
                        <field name="warning_customer_phone_missing" invisible="1"/>
                        <field name="warning_no_service_address" invisible="1"/>
                        <field name="warning_missing_serials" invisible="1"/>
                        <field name="warning_task_type_mapping" invisible="1"/>
                        <field name="warning_planned_hours_zero" invisible="1"/>
                        <field name="warning_no_products_or_so" invisible="1"/>
                    </group>

                    <!-- SCREEN 1: Task Type (Planned Hours field REMOVED) -->
                    <group invisible='state != "type"'>
                        <field name="task_type_id" options="{'no_create': False}"/>
                        <!-- Planned hours field removed - now taken from task type -->
                        <field name="planned_hours" invisible="1"/>
                    </group>

                    <!-- SCREEN 2: Customer (Warnings title REMOVED) -->
                    <group invisible='state != "customer"'>
                        <field name="partner_id" options="{'no_create': False}"/>
                        <field name="show_service_address" invisible="1"/>
                        <field name="service_address_id" options="{'no_create': False}"
                               invisible="not show_service_address"/>
                        <!-- "Warnings" label removed -->
                        <div class="alert alert-warning" invisible="not warning_customer_phone_missing">
                            Customer is missing a phone number.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_no_service_address">
                            No service address selected.
                        </div>
                    </group>

                    <!-- SCREEN 3: Products (Updated banner message and removed message box) -->
                    <group invisible='state != "products"' col="1">
                        <!-- Updated banner message -->
                        <div class="alert alert-info">
                            Select an Existing Sales Order or Add Products to the Task
                        </div>
                        <field name="sale_order_id" options="{'no_create': False}"/>
                        <!-- Message box to the left of product table removed -->
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="lot_id"/>
                                <field name="lot_ids" widget="many2many_tags"/>
                            </tree>
                        </field>
                        <!-- Warning if products required but neither SO nor products provided -->
                        <div class="alert alert-warning" invisible="not warning_no_products_or_so">
                            This task type requires products. Please select a Sales Order or add products above.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_missing_serials">
                            One or more tracked products are missing a serial/lot number.
                        </div>
                    </group>

                    <!-- SCREEN 4: Schedule (Fixed team display and time slot formatting) -->
                    <group invisible='state != "schedule"'>
                        <!-- Qualified Teams title and field -->
                        <group string="Qualified Teams">
                            <field name="qualified_team_ids" widget="many2many_tags" readonly="1" nolabel="1"/>
                        </group>
                        <!-- Available time slots with proper datetime formatting -->
                        <group string="Available Appointments">
                            <field name="selected_slot" widget="radio" nolabel="1"/>
                            <button name="action_more_options" type="object" string="More options" class="btn-secondary"/>
                        </group>
                    </group>

                    <group invisible='state != "notes"'>
                        <field name="notes" placeholder="Internal notes for technicians..."/>
                    </group>

                    <group invisible='state != "confirm"'>
                        <group string="Task Details" col="2">
                            <field name="task_type_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="service_address_id" readonly="1" invisible="not service_address_id"/>
                            <field name="sale_order_id" readonly="1" invisible="not sale_order_id"/>
                            <field name="planned_hours" readonly="1"/>
                            <field name="selected_slot_label" readonly="1"/>
                            <field name="qualified_team_ids" widget="many2many_tags" readonly="1"/>
                            <field name="notes" readonly="1"/>
                        </group>
                        <group string="Products/Services">
                            <field name="line_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="lot_id"/>
                                    <field name="lot_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </group>
                        <div class="alert alert-warning" invisible="not warning_task_type_mapping">
                            Task type is missing a project mapping.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_planned_hours_zero">
                            Planned hours is 0.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_customer_phone_missing">
                            Customer is missing a phone number.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_no_service_address">
                            No service address selected.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_missing_serials">
                            Serial-tracked product(s) are missing serial/lot numbers.
                        </div>
                        <div class="alert alert-warning" invisible="not warning_no_products_or_so">
                            This task type requires products. Please go back and select a Sales Order or add products.
                        </div>
                        <p>
                            When you click <b>Create Task</b>, the task will be created, booked on the selected slot,
                            and an outgoing delivery order will be created and stock reserved.
                        </p>
                    </group>

                </sheet>
                <footer>
                    <button name="action_back" type="object" string="Back" class="btn-secondary"
                            invisible="state == 'type'"/>
                    <button name="action_next" type="object" string="Next" class="btn-primary"
                            invisible="state == 'confirm'"/>
                    <button name="action_create_task" type="object" string="Create Task" class="btn-primary"
                            invisible="state != 'confirm'"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fsm_task_intake_wizard" model="ir.actions.act_window">
        <field name="name">Create Field Service Task - Select Activity</field>
        <field name="res_model">fsm.task.intake.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_fsm_task_intake" name="Create Task (Wizard)" parent="menu_fsm_intake_root"
              action="action_fsm_task_intake_wizard" sequence="10"/>
</odoo>
