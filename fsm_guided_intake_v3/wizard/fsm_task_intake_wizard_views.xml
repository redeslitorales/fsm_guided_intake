<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fsm_task_intake_wizard_form" model="ir.ui.view">
        <field name="name">fsm.task.intake.wizard.form</field>
        <field name="model">fsm.task.intake.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Field Service Task" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="state" invisible="1"/>
                    </group>

                    <group attrs="{'invisible':[('state','!=','type')]}">
                        <field name="task_type_id" options="{'no_create': False}"/>
                        <field name="planned_hours"/>
                    </group>

                    <group attrs="{'invisible':[('state','!=','customer')]}">
                        <field name="partner_id" options="{'no_create': False}"/>
                        <field name="service_address_id" options="{'no_create': False}"/>
                        <label string="Warnings" colspan="2"/>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_customer_phone_missing','=',False)]}">
                            Customer is missing a phone number.
                        </div>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_no_service_address','=',False)]}">
                            No service address selected.
                        </div>
                    </group>

                    <group attrs="{'invisible':[('state','!=','products')]}">
                        <div class="alert alert-info" attrs="{'invisible':[('require_products','=',False)]}">
                            This task type requires at least one product/service line.
                        </div>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="lot_id"/>
                                <field name="lot_ids" widget="many2many_tags"/>
                            </tree>
                        </field>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_missing_serials','=',False)]}">
                            One or more tracked products are missing a serial/lot number.
                        </div>
                    </group>

                    <group attrs="{'invisible':[('state','!=','schedule')]}">
                        <field name="team_id" options="{'no_create': False}"/>
                        <group string="Top Options">
                            <field name="selected_slot" widget="radio"/>
                            <field name="slot1_label" readonly="1" attrs="{'invisible':[('slot1_label','=',False)]}"/>
                            <field name="slot2_label" readonly="1" attrs="{'invisible':[('slot2_label','=',False)]}"/>
                            <field name="slot3_label" readonly="1" attrs="{'invisible':[('slot3_label','=',False)]}"/>
                            <button name="action_more_options" type="object" string="More options" class="btn-secondary"/>
                        </group>
                    </group>

                    <group attrs="{'invisible':[('state','!=','notes')]}">
                        <field name="notes" placeholder="Internal notes for technicians..."/>
                    </group>

                    <group attrs="{'invisible':[('state','!=','confirm')]}">
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_task_type_mapping','=',False)]}">
                            Task type is missing a project mapping.
                        </div>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_planned_hours_zero','=',False)]}">
                            Planned hours is 0.
                        </div>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_customer_phone_missing','=',False)]}">
                            Customer is missing a phone number.
                        </div>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_no_service_address','=',False)]}">
                            No service address selected.
                        </div>
                        <div class="alert alert-warning" attrs="{'invisible':[('warning_missing_serials','=',False)]}">
                            Serial-tracked product(s) are missing serial/lot numbers.
                        </div>
                        <p>
                            When you click <b>Create Task</b>, the task will be created, booked on the selected slot,
                            and an outgoing delivery order will be created and stock reserved.
                        </p>
                    </group>

                </sheet>
                <footer>
                    <button name="action_back" type="object" string="Back" class="btn-secondary"
                            attrs="{'invisible':[('state','=','type')]}"/>
                    <button name="action_next" type="object" string="Next" class="btn-primary"
                            attrs="{'invisible':[('state','=','confirm')]}"/>
                    <button name="action_create_task" type="object" string="Create Task" class="btn-primary"
                            attrs="{'invisible':[('state','!=','confirm')]}"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fsm_task_intake_wizard" model="ir.actions.act_window">
        <field name="name">Create Field Service Task</field>
        <field name="res_model">fsm.task.intake.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_fsm_task_intake" name="Create Task (Wizard)" parent="menu_fsm_intake_root"
              action="action_fsm_task_intake_wizard" sequence="10"/>
</odoo>
