<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_form_fsm_guided_inherit" model="ir.ui.view">
        <field name="name">project.task.form.fsm.guided.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_fsm_prepare_invoice" type="object" string="Prepare Invoice"
                        class="btn-secondary" attrs="{'invisible':[('partner_id','=',False)]}"/>
            </xpath>
            <xpath expr="//sheet//group" position="inside">
                <field name="fsm_task_type_id" groups="fsm_guided_intake.group_fsm_intake_user"/>
                <field name="fsm_booking_id" groups="fsm_guided_intake.group_fsm_intake_user"/>
                <field name="fsm_service_address_id" groups="fsm_guided_intake.group_fsm_intake_user"/>
                <field name="fsm_service_zone_name" groups="fsm_guided_intake.group_fsm_intake_user"/>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Materials/Services" groups="fsm_guided_intake.group_fsm_intake_user">
                    <field name="fsm_material_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="lot_id"/>
                            <field name="lot_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
