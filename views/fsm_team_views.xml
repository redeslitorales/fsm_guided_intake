<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fsm_team_tree" model="ir.ui.view">
        <field name="name">fsm.team.tree</field>
        <field name="model">fsm.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="lead_user_id"/>
                <field name="warehouse_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_fsm_team_form" model="ir.ui.view">
        <field name="name">fsm.team.form</field>
        <field name="model">fsm.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="warehouse_id"/>
                        <field name="calendar_id"/>
                        <field name="lead_user_id"/>
                    </group>
                    <notebook>
                        <page string="Members">
                            <field name="member_ids"/>
                        </page>
                        <page string="Vehicles">
                            <field name="vehicle_ids"/>
                        </page>
                        <page string="Capabilities">
                            <field name="capable_task_type_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fsm_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">fsm.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_fsm_team" name="Teams" parent="industry_fsm.fsm_menu_settings" action="action_fsm_team" sequence="30"/>
</odoo>
