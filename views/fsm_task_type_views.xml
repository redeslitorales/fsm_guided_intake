<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fsm_task_type_tree" model="ir.ui.view">
        <field name="name">fsm.task.type.tree</field>
        <field name="model">fsm.task.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="default_planned_hours"/>
                <field name="requires_products"/>
                <field name="requires_serials"/>
                <field name="requires_signature"/>
                <field name="requires_photos"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Compact tree for "Search More" in activity selection -->
    <record id="view_fsm_task_type_tree_compact" model="ir.ui.view">
        <field name="name">fsm.task.type.tree.compact</field>
        <field name="model">fsm.task.type</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" width="300"/>
                <field name="default_planned_hours"/>
            </tree>
        </field>
    </record>

    <record id="view_fsm_task_type_form" model="ir.ui.view">
        <field name="name">fsm.task.type.form</field>
        <field name="model">fsm.task.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="project_id"/>
                        <field name="default_stage_id"/>
                        <field name="default_planned_hours"/>
                    </group>
                    <group string="Requirements">
                        <field name="requires_products"/>
                        <field name="requires_serials"/>
                        <field name="requires_signature"/>
                        <field name="requires_photos"/>
                        <field name="never_has_product"/>
                        <field name="include_in_wizard"/>
                        <field name="is_client_task"/>
                        <field name="requires_fiber_install"/>
                        <field name="product_category_ids" widget="many2many_tags"/>
                        <field name="subscription_category_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Scheduling">
                        <field name="buffer_before_mins"/>
                        <field name="buffer_after_mins"/>
                        <field name="may_be_rescheduled"/>
                    </group>
                    <group string="Install Validation (Fiber)">
                        <field name="enforce_install_validation"/>
                        <field name="default_pon_type"/>
                        <field name="optics_rx_min"/>
                        <field name="optics_rx_max"/>
                        <field name="optics_tx_min"/>
                        <field name="optics_tx_max"/>
                    </group>
                    <group string="Defaults">
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Capabilities">
                        <field name="capable_team_ids" widget="many2many_tags"/>
                        <field name="preferred_team_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Checklist">
                        <field name="checklist_subtask_names" placeholder="One checklist item per line"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fsm_task_type" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">fsm.task.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_fsm_intake_root" name="FSM Intake" parent="industry_fsm.fsm_menu_root" sequence="10" action="fsm_guided_intake.action_fsm_task_intake_wizard" groups="fsm_guided_intake.group_fsm_intake_user"/>
    <menuitem id="menu_fsm_task_type" name="Task Types" parent="industry_fsm.fsm_menu_settings" action="action_fsm_task_type" sequence="20"/>
</odoo>
