<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_fsm_guided_intake" model="ir.ui.view">
        <field name="name">res.config.settings.fsm.guided.intake</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="FSM Guided Intake" string="FSM Guided Intake">
                    <h2>FSM Guided Intake</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fsm_auto_invoice_on_stage_done"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="fsm_auto_invoice_on_stage_done"/>
                                <div class="text-muted">
                                    When enabled, moving a task to the configured Done stage will automatically create/update the Sales Order from task materials and generate a draft invoice.
                                </div>
                                <div class="mt8">
                                    <field name="fsm_invoice_stage_done_name" placeholder="Done"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
