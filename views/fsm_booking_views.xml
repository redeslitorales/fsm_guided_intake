<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fsm_booking_tree" model="ir.ui.view">
        <field name="name">fsm.booking.tree</field>
        <field name="model">fsm.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="task_id"/>
                <field name="team_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="allocated_hours"/>
                <field name="state"/>
                <field name="picking_id"/>
            </tree>
        </field>
    </record>

    <record id="view_fsm_booking_form" model="ir.ui.view">
        <field name="name">fsm.booking.form</field>
        <field name="model">fsm.booking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="task_id"/>
                        <field name="team_id"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="start_datetime"/>
                        <field name="end_datetime"/>
                        <field name="allocated_hours"/>
                    </group>
                    <group>
                        <field name="picking_id"/>
                    </group>
                    <footer>
                        <button name="action_create_or_update_delivery" type="object" string="Create/Reserve Delivery" class="btn-primary"
                                invisible='state != "confirmed"'/>
                        <button name="action_cancel" type="object" string="Cancel Booking" class="btn-secondary"
                                invisible='state == "cancelled"'/>

                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fsm_booking" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">fsm.booking</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_fsm_booking" name="Bookings" parent="industry_fsm.fsm_menu_root" action="action_fsm_booking" sequence="40"/>
</odoo>
